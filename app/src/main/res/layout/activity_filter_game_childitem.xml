<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/zz_filter_child_first_ll"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                android:gravity="center"
                android:id="@+id/zz_filter_one_rl"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:background="@drawable/filter_item_noclick_bg"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/zz_filter_logo_iv"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/tv1"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/app_common_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="绝地求生"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:gravity="center"
                android:id="@+id/zz_filter_two_rl"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:background="@drawable/filter_item_noclick_bg">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/zz_filter_logo_two_iv"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/tv2"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/app_common_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="绝地求生"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv2"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:gravity="center"
                android:id="@+id/zz_filter_three_rl"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:background="@drawable/filter_item_noclick_bg">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/zz_filter_logo_three_iv"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/tv3"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/app_common_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="#333333"
                    android:text="绝地求生"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv3"/>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>
